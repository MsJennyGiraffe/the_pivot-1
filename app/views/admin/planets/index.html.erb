<div class="container">
  <h1 class="text-center"> All Planets </h1>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
  <table id="planets-table" class="table table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @planets.each do |planet| %>
      <tr>
      <td><h5><%= planet.name %></td></h5>
        <td><%= link_to "Edit", edit_admin_planet_path(planet.id), class: "btn btn-custom btn-person link_text" %></td>
      <td><%= %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>
</div>
