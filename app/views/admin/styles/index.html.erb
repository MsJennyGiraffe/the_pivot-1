<div class="container">
  <h1 class="text-center"> All Climates </h1>
  <div class="container">
    <div class="col-md-6 col-md-offset-3">

  <table id="climates-table" class="table table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
      <td><%= style.name %></td>
      <td><%= link_to "Edit", edit_admin_style_path(style), class: "btn btn-custom btn-person link_text" %></td>
      <td>
      <%= link_to "Delete", admin_style_path(id: style, change_active: "true"), method: :patch, class: "btn btn-custom btn-person link_text" %>
      </td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>
</div>
