<div class="form-box">
<%= form_for(@user) do |f| %>
  <h4><%= f.label :username %><br>
  <span class="form-field-username"><%= f.text_field :username %></span></span></h4>
  <h4><%= f.label :first_name %><br>
  <span class="form-field-first-name"><%= f.text_field :first_name %></span></h4>
  <h4><%= f.label :last_name %><br>
  <span class="form-last-name"><%= f.text_field :last_name %></span></h4>
  <h4><%= f.label :role %><br>
  <span class="form-field-role"><%= f.text_field :role %></span></h4>
  <h4><%= f.label :screen_name %><br>
  <span class="form-field-screen-name"><%= f.text_field :screen_name %></span></h4>
  <h4><%= f.label :uid %><br>
  <span class="form-field-uid"><%= f.text_field :uid %></span></h4>
  <h4><%= f.label :email %><br>
  <span class="form-field-email"><%= f.text_field :email %></span></h4>
  <h4><%= f.label :phone_number %><br>
  <span class="form-field-phone_number"><%= f.text_field :phone_number %></span></h4>
  <%= f.submit %>
<% end %>
</div>
