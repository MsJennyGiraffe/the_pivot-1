  <div class="container">
<h1>Order Details</h1>

<h3>Details for Your Order #<%= @order.id%></h3>

<table id="order-table" class="table table-hover">
<thead>
  <tr>
    <th>Order ID</th>
    <th>Date Ordered</th>
    <th>Total Price</th>
  </tr>
</thead>

<tbody>
  <tr>
  <td><%= @order.id %></td>
  <td><%= @order.created_at.strftime("Order placed on %A, %B %d, %Y at %I:%M %p") %></td>
  </tr>
</tbody>
</table>
</div>

<div class="container">
<table id="order-item-table" class="table table-hover">
<thead>
  <tr>
    <th>Item ID</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Total Price</th>
  </tr>
</thead>

<tbody>
  <tr>
  <% @order.reservations.each do |reservation| %>
  <td><%= link_to "#{reservation.space.name}", sock_path(reservation.space_id) %></td>
  <td><%= reservation.total %></td>
  </tr>
  <% end %>
  <tr>
    <td><strong>Totals</strong></td>
  </tr>
</tbody>
</table>
</div>
